{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A parallel coordinate plot with a custom axis order: Production -> Consumption -> Import -> Export.",
    "title": {
      "text": "Energy Flow Metrics for Non-Renewable Fuel Types (1973â€“2022)",
      "offset": 20
    },
    "data": {
      "url": "https://raw.githubusercontent.com/RyhanJ/Assignment2/refs/heads/main/parallelcoordinateplot.csv"
    },
    "width": 550,
    "height": "container",
    "transform": [
      {
        "calculate": "toNumber(datum['Production'])",
        "as": "Production"
      },
      {
        "calculate": "toNumber(datum['Consumption'])",
        "as": "Consumption"
      },
      {
        "calculate": "toNumber(datum['Import'])",
        "as": "Import"
      },
      {
        "calculate": "toNumber(datum['Export'])",
        "as": "Export"
      },
      {"window": [{"op": "count", "as": "index"}]},
      {"fold": ["Production", "Consumption", "Import", "Export"]},
      {
        "joinaggregate": [
          {"op": "min", "field": "value", "as": "min"},
          {"op": "max", "field": "value", "as": "max"}
        ],
        "groupby": ["key"]
      },
      {
        "calculate": "(datum.value - datum.min) / (datum.max - datum.min)",
        "as": "norm_val"
      },
      {
        "calculate": "(datum.min + datum.max) / 2",
        "as": "mid"
      }
    ],
    "layer": [{
      "mark": {"type": "rule", "color": "#ccc"},
      "encoding": {
        "detail": {"aggregate": "count"},
        "x": {
          "field": "key",
          "type": "nominal",
          "title": "Energy Flow Metrics",
          "sort": ["Production", "Consumption", "Import", "Export"]
        }
      }
    }, {
      "mark": "line",
      "encoding": {
        "color": {"type": "nominal", "field": "Fuel_Type", "scale": {"scheme": "tableau10"}, "title": "Fuel Type", "legend": {"offset": -60}},
        "detail": {"type": "nominal", "field": "index"},
        "opacity": {"value": 0.3},
        "x": {
          "field": "key",
          "type": "nominal",
          "title": "Energy Flow Metrics",
          "sort": ["Production", "Consumption", "Import", "Export"]
        },
        "y": {
          "type": "quantitative",
          "field": "norm_val",
          "axis": {
            "title": "Normalised Value (Petajoules)",
            "labels": false,
            "grid": false,
            "ticks": false,
            "domain": false,
            "titlePadding": -30
          }
        },
        "tooltip": [
          {"type": "quantitative", "field": "value", "title": "Amount (Petajoules):", "format": ",.0f"}
        ]
      }
    }, {
      "encoding": {
        "x": {
          "field": "key",
          "type": "nominal",
          "sort": ["Production", "Consumption", "Import", "Export"]
        },
        "y": {"value": 0}
      },
      "layer": [{
        "mark": {"type": "text", "style": "label"},
        "encoding": {
          "text": {"aggregate": "min", "field": "max", "format": ",.0f"}
        }
      }, {
        "mark": {"type": "tick", "style": "tick", "size": 8, "color": "#ccc"}
      }]
    }, {
      "encoding": {
        "x": {
          "field": "key",
          "type": "nominal",
          "sort": ["Production", "Consumption", "Import", "Export"]
        },
        "y": {"value": 150}
      },
      "layer": [{
        "mark": {"type": "text", "style": "label"},
        "encoding": {
          "text": {"aggregate": "min", "field": "mid", "format": ",.0f"}
        }
      }, {
        "mark": {"type": "tick", "style": "tick", "size": 8, "color": "#ccc"}
      }]
    }, {
      "encoding": {
        "x": {
          "field": "key",
          "type": "nominal",
          "sort": ["Production", "Consumption", "Import", "Export"]
        },
        "y": {"value": 300}
      },
      "layer": [{
        "mark": {"type": "text", "style": "label"},
        "encoding": {
          "text": {"aggregate": "max", "field": "min", "format": ",.0f"}
        }
      }, {
        "mark": {"type": "tick", "style": "tick", "size": 8, "color": "#ccc"}
      }]
    }],
    "config": {
      "axisX": {"domain": false, "labelAngle": 0, "tickColor": "#ccc", "title": "Energy Flow Metrics", "grid": false},
      "view": {"stroke": null},
      "style": {
        "label": {"baseline": "middle", "align": "right", "dx": -5},
        "tick": {"orient": "horizontal"}
      }
    }
  }